{% extends '::base.html.twig' %}

{% block body -%}
    <h1>member list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fn</th>
                <th>Ln</th>
                <th>Birthdate</th>
                <th>Age</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Pic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('member_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fn }}</td>
                <td>{{ entity.ln }}</td>
                <td>{{ entity.birthdate }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.pic }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('member_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('member_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('member_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
