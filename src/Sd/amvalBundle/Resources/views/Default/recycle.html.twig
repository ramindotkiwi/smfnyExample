{% extends 'SdamvalBundle::layout.html.twig' %}
    {% block menutop %}
        <div class="box-container">
            <div class="box-holder">
                <a href="{{ path('manager') }}"><div class="box active" id="menu1"><span><i class="icon-home"></i></span>صفحه ی اصلی</div></a>
            </div>
            <div class="box-holder">
                <a href="{{ path('messages') }}"><div class="box" id="menu2"><span><i class="icon-inbox"></i></span>پیام ها</div></a>
            </div>
            <div class="box-holder">
                <a href="{{ path('gallery') }}"><div class="box" id="menu3"><span><i class="icon-camera"></i></span>گالری</div></a>
            </div>
            <div class="box-holder">
                <a  href="{{ path('user') }}"><div class="box" id="menu4"><span><i class="icon-user"></i></span>اطلاعات کاربری</div></a>
            </div>
        </div>
    {% endblock %}
    {% block rightmenu %}
        <div class="span3">
            <ul id="sidebar" class="nav nav-tabs nav-stacked">
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('manager') }}"><i class="icon-manager"></i>&nbsp;&nbsp;مدیریت مدیران سازمان ها</a>
                    </li>
                    <li><a href="{{ path('subset') }}"><i class="icon-th-large"></i>&nbsp;&nbsp;ثبت زیر مجموعه</a></li>
                {% elseif is_granted('ROLE_MANAGER') %}
                    <li><a href="{{ path('subset') }}"><i class="icon-th-large"></i>&nbsp;&nbsp;ثبت زیر مجموعه</a></li>
                {% endif %}
                <li><a href="{{ path('kala') }}"><i class="icon-table"></i>&nbsp;&nbsp;ثبت اموال جدید</a></li>
                <li><a href="{{ path('messages') }}"><i class="icon-comments-alt"></i>&nbsp;&nbsp;پیام ها<span class="label label-success pull-right">New!</span></a></li>
                <li class="active"><a href="{{ path('recycle') }}"><i class="icon-globe"></i>&nbsp;&nbsp;ثبت اموال متلاشی شده<span class="label label-success pull-right">6</span></a></li>
                <li><a href="#"><i class="icon-truck"></i>&nbsp;&nbsp;گروه بندی اموال<span class="label label-success pull-right">3</span></a></li>
                <li><a href="#"><i class="icon-bolt"></i>&nbsp;&nbsp;گزارش گیری اموال</a></li>
                <li><a href="#"><i class="icon-camera-retro"></i>&nbsp;&nbsp;درخواست اموال جدید</a></li>
                <li><a href="{{ path('user') }}"><i class="icon-user"></i>&nbsp;&nbsp;اطلاعات کاربری</a></li>
                <li><a href="{{ path('help') }}"><i class="icon-legal"></i>&nbsp;&nbsp;راهنما</a></li>
            </ul>
        </div>
    {% endblock %}
{% block content %}
    <div class="span9 transition">
        <h1 class="page-title">اموال</h1>


        <div class="widget widget-table">
            <div class="widget-header">
                <h3><i class="icon-list-alt"></i>&nbsp;&nbsp;لیست اموال متلاشی شده</h3>
            </div>
            <div class="widget-content">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th style="width: 70px;">کد کالا</th>
                        <th>نام کالا</th>
                        <th>تعداد</th>
                        <th>تاریخ</th>
                        <th>امکانات</th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr class="success">
                        <td>124</td>
                        <td>میز</td>
                        <td>5</td>
                        <td>2/3/1396</td>
                        <td class="actions">
                            <a href="#" rel="tooltip" data-toggle="tooltip"  title="ویرایش" class="btn btn-primary btn-mini"><i class="icon-edit icon-2x"></i></a>
                            <a href="#" rel="tooltip" data-toggle="tooltip" title="حذف" class="btn btn-mini btn-danger delete-row"><i class="icon-trash icon-2x"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>16546</td>
                        <td>مانیتور</td>
                        <td>10</td>
                        <td>4/11/1397</td>
                        <td class="actions">
                            <a href="#" rel="tooltip" data-toggle="tooltip"  title="ویرایش" class="btn btn-primary btn-mini"><i class="icon-edit icon-2x"></i></a>
                            <a href="#" rel="tooltip" data-toggle="tooltip" title="حذف" class="btn btn-mini btn-danger delete-row"><i class="icon-trash icon-2x"></i></a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="widget">
            <div class="widget-header">
                <h3><i class="icon-pencil"></i>&nbsp;&nbsp;ثبت مورد جدید</h3>
            </div>
            <div class="widget-content">
                <form>
                    <div class="span8"><label>کد اموال</label><input type="text" value="" class="span4"></div>
                    <div class="span8"><label>نام</label><input type="text" value="" class="span4"></div>
                    <div class="span4"><label>تاریخ</label><input id="date1" type="text" class="span2"></div>
                    <div class="span3 pull-right">
                        <a href="#" class="btn btn-info btn-user-info">ثبت</a>
                    </div>
                </form>
            </div>
        </div>




    </div>

{% endblock %}