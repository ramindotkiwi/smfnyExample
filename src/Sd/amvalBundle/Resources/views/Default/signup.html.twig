{% extends 'SdamvalBundle::landlayout.html.twig' %}
{% block content %}
    <div id="content">
        <div class="container">
            <!-- Sign Up form -->
            <form class="form-login form-wrapper form-narrow">
                <fieldset>
                    <div id="legend">
                        <legend class="">عضویت در سایت</legend>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-user"></i></span>
                                <input class="span3" id="username" type="text" placeholder="نام کاربری">
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-envelope"></i></span>
                                <input class="span3" id="Email" type="text" placeholder="ایمیل">
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                <input class="span3" id="pass" type="password" placeholder="رمز عبور">
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                <input class="span3" id="repass" type="password" placeholder="تکرار رمز عبور">
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <button class="btn btn-info">عضویت <i class="icon-signin"></i></button>
                        </div>
                    </div>
                </fieldset>

            </form>
        </div>
    </div>

{% endblock %}